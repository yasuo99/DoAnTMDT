@model DichVuGame.Models.ViewModels.GamesViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Code</h4>
<hr />

<div class="p-4 border rounded">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>       
        <div class="form-control">
            <label>Game: @Model.Game.Gamename</label>
            <input hidden asp-for="@Model.Game.ID"/>
        </div>
        <div class="form-group row">
            <label asp-for="@Model.Code.Gamecode" class="control-label"></label>
            <input asp-for="@Model.Code.Gamecode" class="form-control" />
            <span asp-validation-for="@Model.Code.Gamecode" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Thêm" class="btn btn-primary" />
        </div>
    </form>
</div>

<div>
    <a class="btn btn-secondary" asp-action="Index">Quay lại</a>
</div>

