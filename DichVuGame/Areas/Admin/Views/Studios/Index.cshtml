@model IEnumerable<DichVuGame.Models.Studio>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Studioname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudioLogo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Describe)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Studioname)
            </td>
            <td>
                <img src="@item.StudioLogo" width="150" height="150" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Describe)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country.ID)
            </td>
            <td>
                <a type="button" class="btn btn-success" asp-action="Edit" asp-controller="Studios" asp-route-id="@item.ID"><i class="fas fa-edit"></i></a>
                <a type="button" class="btn btn-info" asp-action="Details" asp-controller="Studios" asp-route-id="@item.ID"><i class="far fa-list-alt"></i></a>
                <a type="button" class="btn btn-danger" asp-action="Delete" asp-controller="Studios" asp-route-id="@item.ID"><i class="fas fa-trash-alt"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
